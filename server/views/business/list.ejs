<%- include ../partials/header.ejs %> 
<%- include ../partials/main_nav.ejs %>

<!--Main page-->
<main class="container">
  <div class="row">
    <div class="offset-m-3 col-md-10">
      <h1><% title %></h1>
      <% if(typeof currentUser == 'string' && currentUser) { %>
      <a href="/contact-list/add" class="btn btn-primary mb-2" role="button">
        <i class="fas fa-plus-circle"></i> Add a Contact</a
      >
      <% } %>
      <br />
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th class="text-center col-3">Contact Name</th>
            <th class="text-center col-2">Contact Number</th>
            <th class="text-center col-3">E-mail</th>
            <!-- Check if user not login can not edit or delete-->
            <% if(typeof currentUser == 'string' && currentUser) { %>
            <th class="text-center col-1"></th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < BusinessContactList.length; i++) { %>
          <tr>
            <td class="text-center col-3"><%= BusinessContactList[i].name %></td>
            <td class="text-center col-2"><%= BusinessContactList[i].number %></td>
            <td class="text-center col-3"><%= BusinessContactList[i].email %></td>
            <!-- Check if user not login can not edit or delete-->
            <% if(typeof currentUser == 'string' && currentUser) { %>
            <td class="text-center col-1">
              <a
                href="/contact-list/edit/<%= BusinessContactList[i]._id %>"
                class="btn btn-primary btn-sm"
              >
                <i class="fas fa-pencil-alt"></i
              ></a>
              <a
                href="/contact-list/delete/<%= BusinessContactList[i]._id %>"
                class="btn btn-danger btn-sm"
              >
                <i class="fas fa-trash-alt"></i
              ></a>
            </td>
            <% } %>
            <!-- End Check -->
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>