<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
      <div class="offset-3 col-md-6 col-lg-6">
        <h1><%= title %></h1>
        <form class="form" method="POST">
          <div class="form-group">
            <label for="nameTextField">Book Title</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter the book title"
              name="name"
              value="<%= book.name %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="authorTextField">Author</label>
            <input
              type="text"
              class="form-control"
              id="authorTextField"
              placeholder="Enter the book author"
              name="author"
              value="<%= book.author %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="publishedTextField">Published</label>
            <input
              type="text"
              class="form-control"
              id="publishedTextField"
              placeholder="Enter the published"
              name="published"
              value="<%= book.published %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="descriptionTextArea">Description</label>
            <textarea
              type="text"
              class="form-control"
              id="descriptionTextArea"
              placeholder="Enter the Description"
              name="Description"
              required
            ><%= book.Description %></textarea>
          </div>
          <div class="form-group">
            <label for="priceTextField">Price</label>
            <input
              type="text"
              class="form-control"
              id="priceTextField"
              placeholder="Enter the Price"
              name="price"
              value="<%= book.price %>"
              required
            />
          </div>
  
          <button type="submit" class="btn btn-primary mt-2">
            <i class="fas fa-pencil-alt"></i> Save
          </button>
  
          <a href="/book-list" class="btn btn-warning mt-2"
            ><i class="fas fa-undo"></i> Cancel</a
          >
        </form>
      </div>
    </div>
  </div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
